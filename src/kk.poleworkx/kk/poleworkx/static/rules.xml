<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    
    <theme href="minimal.html" if-path="@@edit-tile" />
    <theme href="termine.html" if-path="kurse-workshops/termine-anmeldung/" />
    <theme href="termine.html" css:if-content="body.section-shop" />
    
    <!-- Apply rules to a standard Plone Webpage -->
    <rules css:if-content="#visual-portal-wrapper">
        <notheme if="$ajax_load" />
        <theme href="theme.html" />
        <!-- Head: title -->
        <replace css:theme="title" css:content="title" />
        <!-- Base tag -->
        <replace css:theme="base" css:content="base" />
        
        <after content="/html/head/meta" theme-children="/html/head" />
        
        <!-- Copy style, script and link tags in the order they appear in the content -->
        <after
            content="/html/head/style | /html/head/script | /html/head/link"
            theme-children="/html/head"
            />
        
            <drop theme="/html/head/style" />
            <drop theme="/html/head/script" />
            <drop theme="/html/head/link" />
        

            <after theme-children="/html/head">
                <link rel="shortcut icon" href="/++theme++kk.poleworkx/images/favicon.ico" type="image/x-icon" />
            </after>
        
        <!-- Copy over the id/class attributes on the body tag.
             This is important for per-section styling -->
        <merge attributes="class" css:content="body" css:theme="body" />
        <copy attributes="id dir" css:content="body" css:theme="body" />
        <copy attributes="href" css:content="#portal-logo" css:theme="#logo" />
	    <replace css:content="#portal-siteactions li" css:theme-children="#actions" />
	    <replace css:content="#portal-languageselector li" css:theme-children="#language" />
	    
	    <!-- navigation -->
        <replace css:content="#portal-globalnav li" css:theme-children="#main-nav" />
		<replace css:content="#portal-subnavbar li" css:theme-children="#sub" />
	    
	    <!-- Copy pathbar/breadcrumbs -->
        <replace css:content="#portal-breadcrumbs" css:theme="#breadcrumbs" />
        <drop css:content="#breadcrumbs-you-are-here" />
	    
        <before css:theme="#navigation" css:content="#cart-viewlet" />

	    <!-- Copy over the contents of the page body -->
	    <replace css:content-children="#viewlet-above-content" css:theme-children="#above-content" />
	    <replace css:content-children="#content" css:theme-children="#content" />
        <before css:content=".portalMessage" css:theme="#content" />
	    <replace css:content="#edit-bar" css:theme="#editbar" />
	    <replace css:content-children="#viewlet-below-content" css:theme-children="#below-content" />

        <!-- Portal Columns -->
        <replace css:content-children="#portal-column-one > *" css:theme-children="#sidebar-left" />
        <replace css:content-children="#portal-column-two > *" css:theme-children="#sidebar" />
        
        <!-- Drop placeholder items to make the site validate -->
	    <drop css:content="span.portletTopLeft" />
	    <drop css:content="span.portletTopRight" />
	    <drop css:content="span.portletBottomLeft" />
	    <drop css:content="span.portletBottomRight" />

    </rules>
    
</rules>
